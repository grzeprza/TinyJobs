<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pl.project.gpmw.tinyjobs.RaisedRowDetail"
    tools:showIn="@layout/activity_raised_row_detail">

    <Space
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/textView_title"
        android:layout_below="@id/space1"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$money"
        android:id="@+id/textView_money"
        android:layout_below="@id/space1"
        android:layout_alignParentEnd="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_below="@+id/textView_title"
        android:layout_alignParentStart="true"
        android:id="@+id/space2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="description"
        android:id="@+id/textView_description"
        android:layout_below="@id/space2"
        android:layout_alignParentStart="true" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/textView_description"
        android:layout_alignParentStart="true"
        android:id="@+id/space3" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_time"
        android:text="10:15"
        android:layout_below="@id/space3"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_date"
        android:text="10/25/12"
        android:layout_below="@id/space3"
        android:layout_toRightOf="@id/textView_time"/>


    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/space2"
        android:layout_toEndOf="@+id/space2"
        android:id="@+id/space4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_icon"
        android:layout_below="@id/textView_date"
        android:src="@drawable/ic_launcher"
        android:layout_centerHorizontal="true" />

    <Space
        android:layout_width="20px"
        android:layout_height="10px"
        android:layout_below="@+id/imageView_icon"
        android:layout_centerHorizontal="true"
        android:id="@+id/space5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="address"
        android:id="@+id/textView_address"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/space5"
        android:layout_centerHorizontal="true" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/textView_address"
        android:layout_alignParentStart="true"
        android:id="@+id/space6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="telephone"
        android:id="@+id/textView_telephone"
        android:layout_below="@+id/space6"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
