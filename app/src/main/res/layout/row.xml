<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_rowtaskOwner"
        android:layout_alignParentStart="true"
        android:padding="10dp"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_rowtaskName"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Zakupy dla Andrzejka"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/imageView_rowtaskOwner"
        android:paddingLeft="30dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_rowEarnedMoney"
        android:text="3$"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toRightOf="@id/textView_rowtaskName"
        android:layout_alignParentTop="true"
        android:paddingLeft="30dp"
        android:layout_marginTop="30dp"
        />
</RelativeLayout>